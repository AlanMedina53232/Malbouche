<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <base-config cleartexttrafficpermitted="true">
  <domain-config cleartexttrafficpermitted="true">
    <!-- Permite tráfico HTTP a IPs locales en el rango típico de redes domésticas -->
    <domain includesubdomains="false">192.168.0.0</domain>
    <domain includesubdomains="false">10.0.0.0</domain>
    <domain includesubdomains="false">172.16.0.0</domain>
    <!-- Puedes agregar aquí la IP específica de tu ESP32 si lo prefieres, por ejemplo: -->
    <!-- <domain includeSubdomains="false">192.168.1.123</domain> -->
  </domain-config>
</base-config>
</network-security-config>
